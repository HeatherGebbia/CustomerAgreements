@page "{questionnaireId:int}/{agreementId:int}"
@model CustomerAgreements.Pages.Agreements.EditModel

<form method="post">
    @if (!string.IsNullOrEmpty(Model.Instructions))
    {
        <div class="alert alert-primary text-center mb-4">
            @Model.Instructions
        </div>
    }

    @if (!string.IsNullOrEmpty(TempData["StatusMessage"] as string))
    {
        <div class="alert alert-success text-center">
            @TempData["StatusMessage"]
        </div>
    }


    <div class="form-group d-flex">
        <input asp-for="Agreement.ReadPrivacyPolicy"
               class="form-check-input"
               id="ReadPrivacyPolicy" />
        &nbsp;@Model.Acknowledgement
        <span asp-validation-for="Agreement.ReadPrivacyPolicy" class="text-danger"></span>
    </div>

    <partial name="_AgreementForm" model="Model.FormModel" />

    <div class="d-flex flex-row">
        <button type="submit" name="ActionType" value="Save" class="btn btn-primary btn-sm" formnovalidate>Save</button>
        <span>&nbsp;</span>
        <button type="submit" name="ActionType" value="Submit" class="btn btn-primary btn-sm">Submit</button>
        <span>&nbsp;</span>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/agreementForm.js"></script>
}