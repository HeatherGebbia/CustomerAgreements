@model CustomerAgreements.Models.AgreementFormViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Agreement.QuestionnaireID" />
<div class="table-responsive">
    <table class="table table-bordered w-100 align-middle mb-4">
        <tbody>
            <!-- Header row -->
            <tr class="bg-secondary text-white text-center">
                <td colspan="2" class="fw-bold py-2">Customer Logistics</td>
            </tr>

            <!-- Each row stacks vertically on small screens -->
            <tr class="d-block d-md-table-row">
                <td class="fw-semibold text-start d-block d-md-table-cell w-25">Customer ID</td>
                <td class="text-start d-block d-md-table-cell w-75">@Model.Agreement.CustomerID</td>
            </tr>

            <tr class="d-block d-md-table-row">
                <td class="fw-semibold text-start d-block d-md-table-cell">Agreement ID</td>
                <td class="text-start d-block d-md-table-cell">@Model.Agreement.AgreementID</td>
            </tr>

            <tr class="d-block d-md-table-row">
                <td class="fw-semibold text-start d-block d-md-table-cell">Customer Name</td>
                <td class="text-start d-block d-md-table-cell">
                    <input asp-for="Agreement.CustomerName" class="form-control w-100" />
                    <span asp-validation-for="Agreement.CustomerName" class="text-danger"></span>
                </td>
            </tr>

            <tr class="d-block d-md-table-row">
                <td class="fw-semibold text-start d-block d-md-table-cell">Email</td>
                <td class="text-start d-block d-md-table-cell">
                    <input asp-for="Agreement.CustomerEmail" class="form-control w-100" />
                    <span asp-validation-for="Agreement.CustomerEmail" class="text-danger"></span>
                </td>
            </tr>

            @if (Model.Questionnaire.Sections != null && Model.Questionnaire.Sections.Any())
            {
                @foreach (var s in Model.Questionnaire.Sections.OrderBy(s => s.SortOrder))
                {
                    <tr class="bg-secondary text-white text-center">
                        <td colspan="2" class="fw-bold py-2">@s.Text</td>
                    </tr>
                    @if (s.IncludeInstructions)
                    {
                        <tr class="alert alert-primary text-center mb-4">
                            <td colspan="2">@s.Instructions</td>
                        </tr>
                    }
                    @if (s.Questions != null && s.Questions.Any())
                        {
                        var questionNo = 1;
                        foreach (var q in s.Questions.OrderBy(q => q.SortOrder))
                                {
                                    <tr>
                                        <td>
                                            @($"{questionNo}. {q.Text}")
                                        </td>
                                        <td style="vertical-align: top;">
                                            @if (q.AnswerType == "Radio Button List")
                                                {
                                                    <div class="d-flex flex-wrap gap-3 align-items-baseline">
                                                        @foreach (var ql in q.QuestionLists.OrderBy(ql => ql.SortOrder))
                                                        {
                                                            <div class="form-check form-check-inline">
                                                                <input type="radio"
                                                                       class="form-check-input"
                                                                       name="question_@q.QuestionID"
                                                                       id="option_@ql.QuestionListID"
                                                                       value="@ql.ListValue"
                                                                       @(q.IsRequired ? "Required" : null)
                                                                       data-conditional="@ql.Conditional.ToString().ToLower()"
                                                                       data-dependentid="dependent_@ql.QuestionListID" />

                                                                <label class="form-check-label" for="option_@ql.QuestionListID">
                                                                    @ql.ListValue
                                                                </label>
                                                            </div>      
                                                        }
                                                    </div>
                                                    <!-- Dependent questions (rendered once per conditional list item) -->
                                                    @foreach (var ql in q.QuestionLists.Where(ql => ql.Conditional))
                                                    {
                                                        <div id="dependent_@ql.QuestionListID" class="dependent-question mt-2 ms-4" style="display:none;">
                                                            @foreach (var dq in ql.DependentQuestions.OrderBy(dq => dq.SortOrder))
                                                            {
                                                                <div class="mb-2">
                                                                    <label class="fw-semibold">@dq.Text</label>
                                                                    <input type="text" class="form-control w-75" />
                                                                </div>
                                                            }
                                                        </div>
                                                    }
                                                }
                                        </td>
                                    </tr>
                                    questionNo++;
                                }
                        }
                }
            }
                </tbody>
    </table>
</div>

