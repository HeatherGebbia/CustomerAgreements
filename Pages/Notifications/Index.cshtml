@page
@model CustomerAgreements.Pages.Notifications.IndexModel
@{
    ViewData["Title"] = "Notifications";
}

<div class="jumbotron p-3">
    <div class="d-flex align-items-center">
        <h2>Notifications</h2>
</div>
    <div class="d-flex align-items-center">
        <p>
            <a class="btn btn-primary btn-sm" asp-page="./Create">
                Create new Notification
            </a>
        </p>
    </div>
</div>


@if (Model.Notifications.Count == 0)
{
    <p><em>No Notifications found.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Notification Name</th>
                <th>Notification Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var q in Model.Notifications)
            {
                <tr>
                    <td>@q.NotificationName</td>
                    <td>@q.NotificationType</td>
                    <td>
                        <form method="post" class="p-2 btn-group" style="display:inline" role="group">
                            <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@q.NotificationID">
                                Edit
                            </a>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

