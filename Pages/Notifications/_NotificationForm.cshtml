@model CustomerAgreements.Models.Notification

<div class="form-group d-flex">
    <label asp-for="NotificationName" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="NotificationName" class="form-control" style="flex:1 0 auto;width:auto" />
    <span asp-validation-for="NotificationName" class="text-danger"></span>
</div>
<div class="form-group d-flex align-items-center">
    <label asp-for="NotificationType" class="p-2 text-right" style="flex:0 0 15%"></label>
    <div>
        <input type="radio" asp-for="NotificationType" value="Text" id="Text" />
        <label for="Text">Text</label>
        <input type="radio" asp-for="NotificationType" value="Message" id="Message" />
        <label for="Message">Message</label>
    </div>
</div>

@{
    var isMessage = string.Equals(Model.NotificationType, "Message", StringComparison.OrdinalIgnoreCase);
}

<div id="subjectRow" class="form-group d-flex @(isMessage ? "" : "d-none")">
    <label asp-for="Subject" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="Subject" class="form-control" style="flex:1 0 auto;width:auto" id="Subject" />
    <span asp-validation-for="Subject" class="text-danger"></span>
</div>
<div id="sendToRow" class="form-group d-flex @(isMessage ? "" : "d-none")">
    <label asp-for="SendTo" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="SendTo" class="form-control" style="flex:1 0 auto;width:auto" id="SendTo" />
    <span asp-validation-for="SendTo" class="text-danger"></span>
</div>
<div id="sendFromRow" class="form-group d-flex @(isMessage ? "" : "d-none")">
    <label asp-for="SendFrom" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="SendFrom" class="form-control" style="flex:1 0 auto;width:auto" id="SendFrom" />
    <span asp-validation-for="SendFrom" class="text-danger"></span>
</div>
<div id="sendCCRow" class="form-group d-flex @(isMessage ? "" : "d-none")">
    <label asp-for="SendCC" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="SendCC" class="form-control" style="flex:1 0 auto;width:auto" id="SendCC" />
    <span asp-validation-for="SendCC" class="text-danger"></span>
</div>
<div id="sendBCCRow" class="form-group d-flex @(isMessage ? "" : "d-none")">
    <label asp-for="SendBCC" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="SendBCC" class="form-control" style="flex:1 0 auto;width:auto" id="SendBCC" />
    <span asp-validation-for="SendBCC" class="text-danger"></span>
</div>
<div class="form-group d-flex">
    <label asp-for="Text" class="p-2 text-right" style="flex:0 0 15%"></label>
    <textarea asp-for="Text" class="form-control" style="flex:1 0 auto;width:auto" rows="3"></textarea>
    <span asp-validation-for="Text" class="text-danger"></span>
</div>
<div class="d-flex flex-row">
    <button type="submit" asp-page-handler="Save" class="btn btn-primary btn-sm">Save</button> 
    <span>&nbsp;</span>
    <a class="btn btn-secondary btn-sm" asp-page="./Index">Cancel</a>
</div>
<input asp-for="NotificationID" type="hidden" />
<input asp-for="NotificationKey" type="hidden" />