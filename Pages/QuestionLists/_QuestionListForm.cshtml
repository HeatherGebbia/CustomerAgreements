@model CustomerAgreements.Models.QuestionList

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="QuestionnaireID" />
<input type="hidden" asp-for="SectionID" />
<input type="hidden" asp-for="QuestionID" />
<div class="form-group d-flex">
    <span class="text-danger">*</span>
    <label asp-for="ListValue" class="control-label"></label>
    <input asp-for="ListValue" class="form-control" />
    <span asp-validation-for="ListValue" class="text-danger"></span>
</div>
<div class="form-group d-flex">
    <label asp-for="SortOrder" class="control-label"></label>
    <input asp-for="SortOrder" class="form-control" />
    <span asp-validation-for="SortOrder" class="text-danger"></span>
</div>
<div class="form-group d-flex align-items-center">
    <label asp-for="Conditional" class="p-2 text-right" style="flex:0 0 15%"></label>
    <div>
        <input type="radio" asp-for="Conditional" value="true" id="ConditionalYes" />
        <label for="ConditionalYes">Yes</label>
        <input type="radio" asp-for="Conditional" value="false" id="ConditionalNo" />
        <label for="ConditionalNo">No</label>
    </div>
</div>
<div id="conditionalRow" class="form-group d-flex align-items-start d-none">

</div>
<div class="d-flex flex-row">
    <button type="submit" asp-page-handler="Save" asp-route-id="@Model.QuestionListID" class="btn btn-primary btn-sm">Save</button>
    <span>&nbsp;</span>
    <a asp-page="/Question/Edit" asp-route-id="@Model.QuestionID" class="btn btn-secondary btn-sm">
        Cancel
    </a>
</div>
