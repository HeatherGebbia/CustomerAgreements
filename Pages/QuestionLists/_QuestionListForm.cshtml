@model CustomerAgreements.Models.QuestionList
@{
    var questionUniqueId = ViewData["QuestionUniqueId"];
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="QuestionnaireID" />
<input type="hidden" asp-for="SectionID" />
<input type="hidden" asp-for="QuestionID" />
<input type="hidden" asp-for="QuestionListID" />
<div class="form-group d-flex">
    <label asp-for="ListValue" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="ListValue" class="form-control" style="flex:1 0 auto;width:auto" />
    <span asp-validation-for="ListValue" class="text-danger"></span>
</div>
<div class="form-group d-flex">
    <label asp-for="SortOrder" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="SortOrder" class="form-control" style="flex:1 0 auto;width:auto" />
    <span asp-validation-for="SortOrder" class="text-danger"></span>
</div>
<div class="form-group d-flex align-items-center">
    <label asp-for="Conditional" class="p-2 text-right" style="flex:0 0 15%"></label>
    <div>
        <input type="radio" asp-for="Conditional" value="true" id="ConditionalYes" />
        <label for="ConditionalYes">Yes</label>
        <input type="radio" asp-for="Conditional" value="false" id="ConditionalNo" />
        <label for="ConditionalNo">No</label>
    </div>
</div>
<div class="d-flex flex-row">
    <button type="submit"
            asp-page-handler="Save"
            asp-route-questionUniqueId="@questionUniqueId"
            class="btn btn-primary btn-sm">
        Save
    </button>
    <span>&nbsp;</span>
    <a asp-page="/Questions/Edit"
       asp-route-id="@questionUniqueId"
       asp-route-questionnaireId="@Model.QuestionnaireID"
       class="btn btn-secondary btn-sm">Cancel</a>
</div>

