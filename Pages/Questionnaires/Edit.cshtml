@page "{id:int}"
@model CustomerAgreements.Pages.Questionnaires.EditModel
@{
    ViewData["Title"] = "Edit Questionnaire";
}

<h2>Edit Questionnaire</h2>
<form method="post">    
    <partial name="_QuestionnaireForm" model="Model.Questionnaire" /> 
</form>

<span>&nbsp;</span>

@if (Model.Questionnaire.Sections != null && Model.Questionnaire.Sections.Any())
{
    <table class="table">
        <tbody>
            @foreach (var s in Model.Questionnaire.Sections.OrderBy(s => s.SortOrder))
        {
                <tr class="table-secondary">
                <td>@s.Text</td>
                <td>
                    <a asp-page="/Sections/Edit" asp-route-id="@s.SectionID" class="btn btn-sm btn-primary">Edit</a>
                        <form method="post" asp-page-handler="DeleteSection"
                              asp-route-sectionId="@s.SectionID"
                              asp-route-questionnaireId="@Model.Questionnaire.QuestionnaireID"
                              style="display:inline">
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this section?');">
                                Delete
                            </button>
                        </form>
                        <a asp-page="/Questions/Create"
                           asp-route-questionnaireId="@Model.Questionnaire.QuestionnaireID"
                           asp-route-sectionId="@s.SectionID"
                           class="btn btn-sm btn-success">
                            Add Question
                        </a>

                </td>
            </tr>
                @if (s.Questions != null && s.Questions.Any())
                {
                    foreach (var q in s.Questions.OrderBy(q => q.SortOrder))
                    {
                        <tr>
                            <td style="padding-left: 40px;">
                                @q.QuestionTitle
                            </td>
                            <td>
                                <a asp-page="/Questions/Edit" asp-route-id="@q.ID" class="btn btn-sm btn-primary">Edit</a>
                                <form method="post" asp-page-handler="DeleteQuestion"
                                      asp-route-questionId="@q.ID"
                                      style="display:inline">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this question?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td style="padding-left: 40px;" colspan="2">
                            <em>No questions yet.</em>
                        </td>
                    </tr>
                }
        }
        </tbody>
    </table>
}
else
{
    <p>No sections yet.</p>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}