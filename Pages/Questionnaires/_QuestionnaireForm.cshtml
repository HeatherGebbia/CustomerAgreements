@model CustomerAgreements.Models.Questionnaire

<div class="form-group d-flex">
    <label asp-for="QuestionnaireName" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="QuestionnaireName" class="form-control" style="flex:1 0 auto;width:auto" />
    <span asp-validation-for="QuestionnaireName" class="text-danger"></span>
</div>
<div class="form-group d-flex align-items-center">
    <label asp-for="Status" class="p-2 text-right" style="flex:0 0 15%"></label>
    <div>
        <input type="radio" asp-for="Status" value="Active" id="Active" />
        <label for="Active">Active</label>
        <input type="radio" asp-for="Status" value="Draft" id="Draft" />
        <label for="Draft">Draft</label>
        <input type="radio" asp-for="Status" value="Archived" id="Archived" />
        <label for="Archived">Archived</label>
    </div>
</div>
<div class="d-flex flex-row">
    <button type="submit" asp-page-handler="Save" class="btn btn-primary btn-sm">Save</button>
    <span>&nbsp;</span>
    @if (Model != null && Model.QuestionnaireID > 0)
    {
        <a asp-page="/Sections/Create" asp-route-questionnaireId="@Model.QuestionnaireID" class="btn btn-primary btn-sm">
            Add Section
        </a>
        <span>&nbsp;</span>
    }
    <a class="btn btn-secondary btn-sm" asp-page="./Index">Cancel</a>
</div>

<input asp-for="QuestionnaireID" type="hidden" />