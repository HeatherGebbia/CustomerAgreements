@model CustomerAgreements.Models.Section

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="QuestionnaireID" />
<div class="form-group d-flex">
    <label asp-for="Text" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="Text" class="form-control" style="flex:1 0 auto;width:auto" />
    <span asp-validation-for="Text" class="text-danger"></span>
</div>
<div class="form-group d-flex">
    <label asp-for="SortOrder" class="p-2 text-right" style="flex:0 0 15%"></label>
    <input asp-for="SortOrder" class="form-control" style="flex:1 0 auto;width:auto" />
    <span asp-validation-for="SortOrder" class="text-danger"></span>
</div>
<div class="form-group d-flex align-items-center">
    <label asp-for="IncludeInstructions" class="p-2 text-right" style="flex:0 0 15%"></label>
    <div>
        <input type="radio" asp-for="IncludeInstructions" value="true" id="IncludeYes" />
        <label for="IncludeYes">Yes</label>
        <input type="radio" asp-for="IncludeInstructions" value="false" id="IncludeNo" />
        <label for="IncludeNo">No</label>
    </div>
</div>
<div id="instructionsRow" class="form-group d-flex">
    <label asp-for="Instructions" class="p-2 text-right" style="flex:0 0 15%"></label>
    <textarea asp-for="Instructions" class="form-control" style="flex:1 0 auto;width:auto" rows="3"></textarea>
    <span asp-validation-for="Instructions" class="text-danger"></span>
</div>
<br />
<div class="d-flex flex-row-reverse">
    <a asp-page="/Questionnaires/Edit" asp-route-id="@Model.QuestionnaireID" class="btn btn-secondary">
        Cancel
    </a>

    &nbsp;
    <button type="submit" asp-page-handler="Save" class="btn btn-primary btn-sm">Save</button>
</div>
<input asp-for="SectionID" type="hidden" />

