
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var currentPage = ViewContext.RouteData.Values["Page"]?.ToString() ?? "";
}

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark @(currentPage == "/Index" ? "active fw-bold" : "")"
           asp-page="/Index">Home</a>
    </li>

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark @(currentPage.StartsWith("/Questionnaires") ? "active fw-bold" : "")"
           href="#" id="adminDropdown" role="button"
           data-bs-toggle="dropdown" aria-expanded="false">
            Admin
        </a>
        <ul class="dropdown-menu" aria-labelledby="adminDropdown">
            <li>
                <a class="dropdown-item @(currentPage == "/Questionnaires/Index" ? "active" : "")"
                   asp-page="/Questionnaires/Index">Questionnaires</a>
            </li>
            <li>
                <a class="dropdown-item @(currentPage == "/Notifications/Index" ? "active" : "")"
                   asp-page="/Notifications/Create">Notifications</a>
            </li>
            <li>
                <a class="dropdown-item @(currentPage == "/Lists/Index" ? "active" : "")"
                   asp-page="/Lists/Edit">Lists</a>
            </li>
        </ul>
    </li>
</ul>
