@page
@model CustomerAgreements.Pages.Lists.CreateModel
@{
    ViewData["Title"] = "Create new List";
}

<h2>Create List</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group d-flex">
        <label asp-for="@Model.List.ListName" class="p-2 text-right" style="flex:0 0 15%"></label>
        <input asp-for="@Model.List.ListName" class="form-control" style="flex:1 0 auto;width:auto" />
        <span asp-validation-for="@Model.List.ListName" class="text-danger"></span>
    </div>
    <div class="form-group d-flex">
        <label asp-for="@Model.List.ListValue" class="p-2 text-right" style="flex:0 0 15%"></label>
        <input asp-for="@Model.List.ListValue" class="form-control" style="flex:1 0 auto;width:auto" />
        <span asp-validation-for="@Model.List.ListValue" class="text-danger"></span>
    </div>
    <div class="d-flex flex-row">
        <button type="submit" asp-page-handler="Save" class="btn btn-primary btn-sm">Save</button>
        <span>&nbsp;</span>
        <a class="btn btn-secondary btn-sm" asp-page="./Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}