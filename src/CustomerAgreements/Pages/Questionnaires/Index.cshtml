@page
@model CustomerAgreements.Pages.Questionnaires.IndexModel
@{
    ViewData["Title"] = "Questionnaires";
}

<div class="jumbotron p-3">
    <div class="d-flex align-items-center">
        <h2>Questionnaires</h2>    
</div>
    <div class="alert alert-secondary small py-2 mt-2 mb-3" role="alert">
        <strong>Note:</strong> Admin pages are accessible in this demo so reviewers can explore
        how questionnaires, notifications, and system lists are managed.
    </div>
    <div class="d-flex align-items-center">
        <p>
            <a class="btn btn-primary btn-sm" asp-page="./Create">
                Create new Questionnaire
            </a>
        </p>
    </div>
</div>


@if (Model.Questionnaires.Count == 0)
{
    <p><em>No questionnaires found.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>QuestionnaireID</th>
                <th>Name</th>
                <th>Status</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var q in Model.Questionnaires)
            {
                <tr>
                    <td>@q.QuestionnaireID</td>
                    <td>@q.QuestionnaireName</td>
                    <td>@q.Status</td>
                    <td>@q.CreatedDate.ToShortDateString()</td>
                    <td>
                        <form method="post" class="p-2 btn-group" style="display:inline" role="group">
                            <a class="btn btn-primary btn-sm" asp-page="/Agreement/Create" asp-route-questionnaireId="@q.QuestionnaireID" asp-route-preview="true">
                                Preview
                            </a>
                            <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@q.QuestionnaireID">
                                Edit
                            </a>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

